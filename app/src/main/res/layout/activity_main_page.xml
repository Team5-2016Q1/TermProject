<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team5.calendarproject.MainPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="This is the Current Month"
        android:id="@+id/monthly_view_month_name"
        android:layout_gravity="center_horizontal|top"
        android:textSize="27dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_row="0"
        android:gravity="center" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:rowOrderPreserved="true"
        android:useDefaultMargins="false"
        android:rowCount="5"
        android:columnCount="1"
        android:layout_above="@+id/event_list_add_event_button"
        android:layout_below="@+id/monthly_view_month_name">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:id="@+id/monthly_week_1"
            android:layout_row="0"
            android:layout_rowWeight="1">
                <include layout="@layout/week_layout"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:id="@+id/monthly_week_2"
            android:layout_row="1"
            android:layout_rowWeight="1">
                <include layout="@layout/week_layout"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:id="@+id/monthly_week_3"
            android:layout_row="2"
            android:layout_rowWeight="1">
                <include layout="@layout/week_layout"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:id="@+id/monthly_week_4"
            android:layout_row="3"
            android:layout_rowWeight="1">
              <include layout="@layout/week_layout"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:id="@+id/monthly_week_5"
            android:layout_row="4"
            android:layout_rowWeight="1">
                <include layout="@layout/week_layout"/>
        </LinearLayout>


    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Event"
        android:id="@+id/event_list_add_event_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#0356bb"
        android:textColor="#ffffff" />

</RelativeLayout>
