<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day  "
        android:id="@+id/day_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ##"
        android:id="@+id/day_number"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/day_name"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day_name"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:layout_alignEnd="@+id/day_number">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="event"
            android:id="@+id/day_event_1"
            android:visibility="invisible"
            android:textColor="#e20000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="event"
            android:id="@+id/day_event_2"
            android:visibility="invisible"
            android:textColor="#000cea" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="event"
            android:id="@+id/day_event_3"
            android:visibility="invisible"
            android:textColor="#00c12a" />
    </LinearLayout>
</RelativeLayout>