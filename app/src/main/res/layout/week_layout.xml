<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:useDefaultMargins="false"
        android:gravity="center|top"
        android:outlineProvider="bounds"
        android:rowOrderPreserved="true"
        android:columnOrderPreserved="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:rowCount="1"
        android:columnCount="7">

        <LinearLayout
            android:id="@+id/weekly_sunday"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:clickable="true">
                <include layout="@layout/day_layout" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weekly_monday"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0">
                <include layout="@layout/day_layout" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weekly_tuesday"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="0">
                <include layout="@layout/day_layout" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weekly_wednesday"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="0">
                <include layout="@layout/day_layout" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weekly_thursday"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:layout_row="0">
                <include layout="@layout/day_layout" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weekly_friday"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_column="5"
            android:layout_columnWeight="1"
            android:layout_row="0">
                <include layout="@layout/day_layout" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weekly_saturday"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_column="6"
            android:layout_columnWeight="1"
            android:layout_row="0">
                <include layout="@layout/day_layout" />
        </LinearLayout>

    </GridLayout>
</RelativeLayout>